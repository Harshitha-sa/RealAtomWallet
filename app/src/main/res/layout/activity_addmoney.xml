<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddmoneyActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/atmbackg"
        android:alpha="0.35"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/addcontact"
        android:layout_marginTop="150dp"
        android:id="@+id/addContactImageView"
        android:clickable="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/addContactText"
        android:layout_below="@id/addContactImageView"
        android:text="Add New Contact"
        android:textStyle="bold"
        android:textSize="24dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/addContactImageView"
        android:src="@drawable/selectcontact"
        android:layout_marginTop="250dp"
        android:id="@+id/selectContactImageView"
        android:clickable="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/selectContactText"
        android:layout_below="@id/selectContactImageView"
        android:text="Select Contact"
        android:textStyle="bold"
        android:textSize="24dp"/>



</RelativeLayout>